include ../partials/header
main
    div.container.card.new-card
        div.row
            h4.center-align.create Modósítsd a bizonyságod #{blogs.name}
        div(style="width: 60%; margin: 25px auto;")
            form(action="/blogs/" + blogs._id + "?_method=PUT" method='POST')
                div.input-field
                    input.form-control(type='text' name='name' placeholder='' value= blogs.name)
                    label(for="name") Bizonyságod címe
                div.input-field
                    input.form-control(type='text' name='subname' placeholder='' value= blogs.subname)
                    label(for="subname") alcíme
                div(class="input-field")
                    select(name="status" required)
                        option(value="" disabled selected) Állapot
                        option(value="nyilvános") Nyilványos
                        option(value="privát") Privát
                div.input-field

                div.input-field
                    textarea(name="description" rows="10" cols="95") #{blogs.description}
                div.input-field
                    button.waves-effect.waves-light.btn Módosítom!
                a.back(href='/blogs') vissza
include ../partials/footer


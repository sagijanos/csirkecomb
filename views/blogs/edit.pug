include ../partials/header
div.container
    div.row
        h1.text-center Edit #{blogs.name}
        div(style="width: 30%; margin: 25px auto;")
            form(action="/blogs/" + blogs._id + "?_method=PUT"  method='POST')
                div.form-group
                    input.form-control(type='text' name='name' value= blogs.name)
                div.form-group
                    input.form-control(type='text' name='image' value= blogs.image)
                div.form-group
                    input.form-control(type='text' name='description' value= blogs.description)
                div.form-group
                    button.btn.btn-lg.btn-danger.btn-block Submit!
            a(href='/blogs') back
        
    
include ../partials/footer
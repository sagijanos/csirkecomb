include ../partials/header 
div.row
    div.col-md-3.profile-details
        div.circle-person(id="user-avatar" class="user-avatar" style="background: url(" + user.avatar + ")")
        h4.user-name #{user.firstname + " " + user.lastname} 
            span
                a(href="/users/" + user.id + "/edit") <i class="fa fa-pencil"></i></span></a> 
    div.col-md-2.profile-details 
    div.col-md-4.profile-information
        p.bio Bio
        hr.bio-hr
        if user.bio.length === 0
            a(href="/users/" + user.id + "/edit")
                p.profile-text Kérlek adj hozzá valamit 
        p.profile-text #{user.bio}
div.row.simple-text
    div.col-md-1
    div.col-md-4
        h5.posts #{user.username} bejegyzései
        hr
div.container  
        div.row
            div.container.inner-container
                div.col-md-12
                    if noMatch !== null
                        h3.nomatch #{noMatch}
                each item in blog
                    div.container
                        div.col-md-2
                        div.col-md-6.col-sm-12
                            ul.personal-text
                                li #{moment(item.createAt).fromNow()}
                                li 
                                    i.fa.fa-user
                                li #{item.author.username}
                            div.caption
                                h1.post-title #{item.name}
                            h6.post-content !{item.description.substring(0, 200)}
                            p
                                a(href='/blogs/' + item._id class="btn btn-primary" id="showmore") Mutass többet...
                        div.col-md-4

include ../partials/footer
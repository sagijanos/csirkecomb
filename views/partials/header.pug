doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title= title
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  nav.navbar.navbar-default
    div.container
        div.navbar-header
            button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/") CsirkeComb
        div(id='navbar' class='collapse navbar-collapse')
          ul.nav.navbar-nav
            li
                a(href="/blogs") Home
          ul.nav.navbar-nav.navbar-right
              if !currentUser
                  li
                    a(href="/login") Bejelentkezés
                  li
                    a(href="/register") Regisztrálás
              else 
                  li
                    a Üdvözöllek #{currentUser.username}
                  li
                    a(href="/users/" + currentUser._id ) profilom
                  li
                    a(href="/logout") Kilépés
  div.container
    if error && error.length > 0              
        div.alert.alert-danger(role="alert") #{error}
  div.container  
    if success && success.length > 0            
        div.alert.alert-success(role="alert") #{success}

    block content
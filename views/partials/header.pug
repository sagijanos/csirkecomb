  body
  nav.navbar.navbar-default
    div.container
        div.navbar-header
            button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/") CsirkeComb
        div(id='navbar' class='collapse navbar-collapse')
          ul.nav.navbar-nav
            li
                a(href="/blogs") Főoldal
            li
              p
                form.form-inline(action="/blogs" method="GET")
                  div.form-group.search-tool
                    input.form-control(type="submit" value="Search" class="btn btn-default" id="search")
                    i.fa.fa-search
                    input.form-control(type="text" name="search" placeholder="bejegyzés keresése" id="search")
          ul.nav.navbar-nav.navbar-right
              if !currentUser
                  li
                    a(href="/login") Bejelentkezés
                  li
                    a(href="/register") Regisztrálás
              else
                  li
                    a(href="/blogs/new") bejegyzés hozzáadása 
                  li
                    a.welcome-user #{currentUser.username}
                  li
                    a(href="/users/" + currentUser._id ) profilom
                  li
                    a(href="/logout") Kilépés
                  li
                    a(href="/contact") Kapcsolat 
    block content